{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./*": "./src/components/*.tsx",
    "./shadcn/*": "./src/components/ui/*.tsx",
    "./shadcn/hooks/*": "./src/components/ui/hooks/*.ts",
    "./types": "./src/types/index.ts",
    "./styles.css": "./dist/index.css"
  },
  "imports": {
    "#deps/lib/*": "./src/lib/*.ts",
    "#types": "./src/types/index.ts",
    "#components/ui/*": "./src/components/ui/*.tsx",
    "#components/ui/hooks/*": "./src/components/ui/hooks/*.ts"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/globals.css -o ./dist/index.css",
    "lint": "eslint . --max-warnings 0",
    "dev": "tailwindcss -i ./src/globals.css -o ./dist/index.css --watch",
    "lint:styles": "stylelint ./src/**/*.tsx",
    "generate:component": "turbo gen react-component",
    "ui:add": "pnpm dlx shadcn-ui@latest add"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/stylelint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "2.0.14",
    "@types/eslint": "9.6.1",
    "@types/node": "20.16.2",
    "@types/react": "18.3.4",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.20",
    "eslint": "8.57.0",
    "postcss": "8.4.41",
    "react": "18.3.1",
    "stylelint": "16.9.0",
    "tailwindcss": "3.4.10",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@kuma-ui/core": "1.5.7",
    "@radix-ui/react-accordion": "1.2.0",
    "@radix-ui/react-aspect-ratio": "1.1.0",
    "@radix-ui/react-avatar": "1.1.0",
    "@radix-ui/react-dropdown-menu": "2.1.1",
    "@radix-ui/react-icons": "1.3.0",
    "@radix-ui/react-label": "2.1.0",
    "@radix-ui/react-slot": "1.1.0",
    "@radix-ui/react-toast": "1.2.1",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "framer-motion": "11.3.30",
    "lucide-react": "0.436.0",
    "next-themes": "0.3.0",
    "tailwind-merge": "2.5.2",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.23.8"
  }
}

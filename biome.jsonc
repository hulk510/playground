{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": ["public"],
  },
  "formatter": {
    "useEditorconfig": true,
    "indentStyle": "space",
  },
  "organizeImports": {
    "enabled": true,
  },
  "linter": {
    "rules": {
      "recommended": true,
    },
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "quoteStyle": "single",
      "attributePosition": "auto",
    },
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
  },
  "overrides": [
    {
      "include": ["*.astro"],
      "javascript": {
        "globals": ["Astro"],
      },
    },
  ],
}

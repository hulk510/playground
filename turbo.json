{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**"
      ],
      "env": ["DATABASE_PRISMA_URL", "NEXT_PUBLIC_SOCKET_SERVER_URL"]
    },
    "//#format-and-lint": {
      "outputLogs": "errors-only"
    },
    "//#format-and-lint:fix": {
      "outputLogs": "errors-only",
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {}
  }
}

{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**"
      ],
      "env": [
        "DATABASE_PRISMA_URL",
        "NEXT_PUBLIC_SOCKET_SERVER_URL",
        "FRONTEND_URL"
      ]
    },
    "test": {},
    "lint": {
      "outputLogs": "errors-only"
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate:deploy": {
      "cache": false
    }
  }
}
